{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "website",
  "compatibility_date": "2025-12-10",
  "compatibility_flags": ["nodejs_compat"],
  "workers_dev": false,
  "preview_urls": true,
  "upload_source_maps": true,
  "placement": { "mode": "smart" },

  "route": "eve0415.net",

  "main": "./src/server.ts",
  "assets": { "directory": "./dist/client" },

  "observability": {
    "enabled": true,
    "traces": { "enabled": true }
  },

  "triggers": {
    "crons": ["0 * * * *"]
  },

  "kv_namespaces": [
    {
      "binding": "GITHUB_STATS_CACHE",
      "id": "7c81378ba627479abce566995492eda0"
    },
    {
      "binding": "CONTACT_RATE_LIMIT",
      "id": "TODO_CREATE_KV_NAMESPACE"
    }
  ],

  "send_email": [
    {
      "name": "CONTACT_EMAIL",
      "destination_address": "contact@eve0415.net"
    }
  ]
}
