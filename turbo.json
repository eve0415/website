{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "panda:turbo": {
      "inputs": ["panda/**", "panda.config.ts"],
      "outputs": ["styled-system/**"]
    },
    "build:turbo": {
      "dependsOn": ["panda:turbo"],
      "env": ["BRANCH"],
      "inputs": [
        "app/**",
        "assets/**",
        "components/**",
        "styled-system/**",
        "next.config.js",
        "postcss.config.cjs",
        "next-env.d.ts"
      ],
      "outputs": [".next/**", "!.next/cache/**", "out"]
    },
    "lint:fix": {
      "dependsOn": ["panda:turbo"],
      "inputs": ["*"]
    },
    "lint:ci": {
      "dependsOn": ["panda:turbo"],
      "inputs": ["*"]
    },
    "dev:turbo": {
      "dependsOn": ["panda:turbo"],
      "cache": false,
      "persistent": true
    }
  }
}
