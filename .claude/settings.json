{
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "MAX_THINKING_TOKENS": "31999",
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "BASH_MAX_TIMEOUT_MS": "1200000",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "ENABLE_TOOL_SEARCH": "true",
    "ENABLE_EXPERIMENTAL_MCP_CLI": "false",
    "CLAUDE_CODE_HIDE_ACCOUNT_INFO": "true"
  },
  "permissions": {
    "deny": [
      "Read(.env)",
      "Read(.env.local)",
      "Read(.env.development)",
      "Read(.env.production)",
      "Read(.dev.vars)",
      "Read(.dev.vars.local)",
      "Glob(.env*)",
      "Glob(**/.env*)",
      "Glob(.dev.vars*)",
      "Glob(**/.dev.vars*)",
      "Edit(.env)",
      "Edit(.env.local)",
      "Edit(.env.development)",
      "Edit(.env.production)",
      "Edit(.dev.vars)",
      "Edit(.dev.vars.local)",
      "Write(.env)",
      "Write(.env.local)",
      "Write(.env.development)",
      "Write(.env.production)",
      "Write(.dev.vars)",
      "Write(.dev.vars.local)",
      "Bash(cat .env:*)",
      "Bash(cat .dev.vars:*)",
      "Bash(head .env:*)",
      "Bash(head .dev.vars:*)",
      "Bash(tail .env:*)",
      "Bash(tail .dev.vars:*)",
      "Bash(less .env:*)",
      "Bash(less .dev.vars:*)",
      "Bash(more .env:*)",
      "Bash(more .dev.vars:*)",
      "Bash(bat .env:*)",
      "Bash(bat .dev.vars:*)",
      "Bash(grep .env:*)",
      "Bash(grep .dev.vars:*)",
      "Bash(rg .env:*)",
      "Bash(rg .dev.vars:*)",
      "Bash(vim .env:*)",
      "Bash(vim .dev.vars:*)",
      "Bash(vi .env:*)",
      "Bash(vi .dev.vars:*)",
      "Bash(nano .env:*)",
      "Bash(nano .dev.vars:*)",
      "Bash(sed .env:*)",
      "Bash(sed .dev.vars:*)",
      "Bash(awk .env:*)",
      "Bash(awk .dev.vars:*)",
      "Bash(base64 .env:*)",
      "Bash(base64 .dev.vars:*)",
      "Bash(cp .env:*)",
      "Bash(cp .dev.vars:*)",
      "Bash(source .env:*)",
      "Bash(source .dev.vars:*)",
      "Bash(. .env:*)",
      "Bash(. .dev.vars:*)"
    ],
    "defaultMode": "plan"
  },
  "enableAllProjectMcpServers": true,
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "code-review@claude-code-plugins": true,
    "pr-review-toolkit@claude-code-plugins": true
  }
}
