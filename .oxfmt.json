{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "ignorePatterns": [
    ".wrangler",
    "dist",
    "src/routeTree.gen.ts",
    "src/tanstack-start.d.ts",
    "worker-configuration.d.ts"
  ],
  "arrowParens": "avoid",
  "singleQuote": true,
  "jsxSingleQuote": true,
  "printWidth": 160,
  "experimentalSortImports": {
    "order": "asc",
    "internalPattern": ["#"],
    "groups": [
      ["type"],
      ["builtin"],
      ["external"],
      ["internal"],
      ["parent"],
      ["sibling"],
      ["index"]
    ]
  }
}
