      "name": "pnpm",
      "version": "10.28.1"
    },
    "runtime": {
      "name": "node",
      "version": "24.12.x"
    }
  },
  "packageManager": "pnpm@10.28.1",
  "pnpm": {
    "overrides": {
      "vite": "8.0.0-beta.10"
    }
  }
