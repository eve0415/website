    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "@graphql-codegen/cli": "^6.1.1",
    "@graphql-codegen/typescript": "^5.0.7",
    "@graphql-codegen/typescript-operations": "^5.0.7",
    "@marsidev/react-turnstile": "^1.4.1",
    "@octokit/core": "^7.0.6",
    "@octokit/graphql-schema": "^15.26.1",
    "@octokit/plugin-retry": "^8.0.3",
    "@octokit/plugin-throttling": "^11.0.3",
    "@storybook/addon-a11y": "^10.2.0",
    "@storybook/addon-docs": "^10.2.0",
    "@storybook/addon-mcp": "^0.2.1",
    "@storybook/addon-vitest": "^10.2.0",
    "@storybook/react-vite": "^10.2.0",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/devtools-vite": "^0.4.1",
    "@tanstack/eslint-plugin-router": "^1.155.0",
    "@tanstack/react-devtools": "^0.9.2",
    "@tanstack/react-form": "^1.27.7",
    "@tanstack/react-form-devtools": "^0.2.12",
    "@tanstack/react-form-start": "^1.27.7",
    "@tanstack/react-router": "^1.157.7",
    "@tanstack/react-router-devtools": "^1.157.7",
    "@tanstack/react-start": "^1.157.7",
    "@tanstack/start-storage-context": "^1.157.7",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "7.0.0-dev.20260124.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser-playwright": "4.1.0-beta.1",
    "@vitest/coverage-istanbul": "4.1.0-beta.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "cloudflare": "^5.2.0",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "^10.2.0",
    "mimetext": "^3.0.27",
    "msw": "^2.12.7",
    "nyc": "^17.1.0",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
