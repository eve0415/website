{
  "type": "module",
  "imports": {
    "#*": [
      "./src/*",
      "./src/*.ts",
      "./src/*.tsx"
    ],
    "#.storybook/*": [
      "./.storybook/*",
      "./.storybook/*.ts",
      "./.storybook/*.tsx"
    ]
  },
  "scripts": {
    "dev": "vite dev --host",
    "build": "vite build",
    "generate": "wrangler types && graphql-codegen",
    "lint": "biome check --write --unsafe && oxlint --type-aware --type-check --fix --fix-suggestions --fix-dangerously --report-unused-disable-directives && oxfmt",
    "test": "vitest run --typecheck",
    "test:update": "vitest run --typecheck --update",
    "storybook": "(find src -type d -name '__screenshots__' -exec rm -rf {} + 2>/dev/null || true) && storybook dev --port 6006"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@browser-echo/vite": "^1.1.0",
    "@cloudflare/vite-plugin": "^1.20.1",
    "@cloudflare/vitest-pool-workers": "https://pkg.pr.new/@cloudflare/vitest-pool-workers@11632",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/typescript": "^5.0.7",
    "@graphql-codegen/typescript-operations": "^5.0.7",
    "@marsidev/react-turnstile": "^1.4.1",
    "@octokit/core": "^7.0.6",
    "@octokit/graphql-schema": "^15.26.1",
    "@octokit/plugin-retry": "^8.0.3",
    "@octokit/plugin-throttling": "^11.0.3",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-mcp": "^0.1.6",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/devtools-vite": "^0.4.1",
    "@tanstack/eslint-plugin-router": "^1.141.0",
    "@tanstack/react-devtools": "^0.9.1",
    "@tanstack/react-router": "^1.146.0",
    "@tanstack/react-router-devtools": "^1.146.0",
    "@tanstack/react-start": "^1.146.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "7.0.0-dev.20260108.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-istanbul": "^4.0.16",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "^10.1.11",
    "mimetext": "^3.0.27",
    "msw": "^2.12.7",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "oxlint-tsgolint": "^0.10.1",
    "playwright": "^1.57.0",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "storybook": "^10.1.11",
    "tailwindcss": "^4.1.18",
    "vite": "8.0.0-beta.5",
    "vite-plugin-devtools-json": "^1.0.0",
    "vitest": "^4.0.16",
    "vitest-browser-react": "^2.0.2",
    "wrangler": "^4.58.0"
  },
  "devEngines": {
    "packageManager": {
      "name": "pnpm",
      "version": "10.27.0"
    },
    "runtime": {
      "name": "node",
      "version": "24.12.x"
    }
  },
  "packageManager": "pnpm@10.27.0",
  "pnpm": {
    "overrides": {
      "vite": "8.0.0-beta.5"
    }
  }
}
