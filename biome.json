{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!node_modules",
      "!.wrangler",
      "!dist",
      "!src/routeTree.gen.ts",
      "!src/tanstack-start.d.ts",
      "!worker-configuration.d.ts"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "domains": {
      "tailwind": "recommended"
    },
    "includes": ["**/*.ts", "**/*.tsx"],
    "rules": {
      "recommended": false,
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "error",
          "options": {
            "functions": ["twMerge", "twJoin", "tv"]
          }
        }
      },
      "complexity": {
        "noImportantStyles": "off"
      }
    }
  },
  "assist": {
    "enabled": false
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    },
    "formatter": { "enabled": false },
    "assist": { "enabled": true },
    "linter": { "enabled": true }
  }
}
